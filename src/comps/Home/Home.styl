@import '../variables'
@import '../mixins'

.Home {
  flex-direction: column;
}

.input-section {
  background: whitesmoke;
  width: 100%;
  height: 95px;
  justify-content: center;
  align-items: center;

  &.status-valid {
    background: #32bea6;
  }

  &.status-invalid {
    background: red;
  }

  #input-components {
    background: white;
    width: 464px;
    justify-content: space-between;
    align-items: center;
    border-radius: 8px;
    padding: 15px;
    height: 55px;
    transition: all 0.5s;

    input {
      padding-right: 15px;
      width: 100%;
    }

    img {
      height: 35px;
    }
  }
}

#shortlink-display {
  margin-top: 25px;

  a {
    margin-center();
  }

  p {
    font-size: 2.2rem;
  }
}

@media (max-width: 549px) {
  #input-components {
    max-width: 85%;
  }
}
